{
  "name": "Ingress Notifier",
  "version": "1.0.11",
  "manifest_version": 2,
  "description": "Extended notification functionality for Ingress.",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
	  "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://ingress-notify.appspot.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.ingress.com/intel*"],
      "js": [
          "angular.min.js",
          "app.js",
          "ingress-override-bootstrap.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "override-ingress.js"
  ],
  "background": {
    "scripts": [
        "chrome_ex_oauthsimple.js",
        "chrome_ex_oauth.js",
        "angular.min.js",
        "app.js",
        "background.js"
    ],
    "persistent": false
  }
}
